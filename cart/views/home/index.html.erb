<div id="Logo">
    <img src="/img/Logo.png">
</div>
<img src="img/ImagenIndex.png" class="ImagenIndex">
<% if false %>
<form action="/login" method="post">
    <%= csrf_token_field %>
    <div id="Login">
        <div id="Textos">
            <label id="labelCorreo" class="control-label" for="inputCorreo">Correo</label>
            <input type="text" id="inputCorreo" name="correo" placeholder="ejemplo@mail.com" required>
            <div id="Fila2">
                <label id="labelContraseña" class="control-label" for="inputContraseña">Contraseña</label>
                <input type="password" id="inputContraseña" name="password" placeholder="* * * * * * * *" required>
            </div>
        </div>
        <div id="Borde-Right"></div>
    </div>
    <div id="Signin">
        <a href="javascript:void(0)"><img src="/img/Entrar.png"></a>
    </div>
</form>
<% end %>
<div id="Social">
    <% if false %>
    <p>¿No puedes acceder a tu cuenta?</p>
    <% end %>
    <a id="Social1" href="/auth/facebook"><img src="/img/Facebook.png"></a>
    <a href="/auth/twitter"><img src="/img/Twitter.png"></a>
</div>
<% if false %>
<div id="SignupMovil">
    <a href="<%= url(:home, :registrar) %>"><img src="/img/Registro.png"></a>
    <p>¿No estás Registrado?</p>
</div>
<% end %>

<script type="text/javascript">
    $('document').ready(function(){
        $('#Signup a').attr('style','display:block');
        $('#Signup p').attr('style','display:block');
    });
    $(function(){
        $("#Signin a").click(function(){
            $("form").submit();
        })
    })
</script>

