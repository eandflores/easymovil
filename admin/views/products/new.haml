%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:products, :index)
  %li.active=link_to tag_icon(:plus, pat(:new)), url(:products, :new)

.tabs-content
  -form_for :product, url(:products, :create), :class => 'form-horizontal', :multipart => true do |f|
    =partial 'products/form', :locals => { :f => f }
